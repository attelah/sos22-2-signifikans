<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Inställningar">

        <EditTextPreference
            app:key="userName"
            app:title="Ditt namn"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="testGrp1"
            app:title="Grupp 1"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="testGrp2"
            app:title="Grupp 2"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="test1"
            app:title="Aktivitet 1"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="test2"
            app:title="Aktivitet 2"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="Signifikansnivå"
            app:title="0.05"
            app:useSimpleSummaryProvider="true" />


        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="@string/reply_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />

        <SwitchPreferenceCompat
            app:dependency="sync"
            app:key="attachment"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/attachment_title" />

    </PreferenceCategory>

</PreferenceScreen>